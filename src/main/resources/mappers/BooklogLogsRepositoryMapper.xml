<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.withbooks.web.repository.BooklogLogsRepository">
	
	<select id="findAll" resultType="BooklogLogs" parameterType="Long">
		select 
				* 
		  from 
		  		booklog_logs 
		 where 
		 		booklog_id = #{booklogId};
	</select>

	<insert id="save" parameterType="BooklogLogs">
		insert into
			booklog_logs
				(
					content
				   ,img
				   ,booklog_id
				)
			values
				(
					#{content}
				   ,#{img}
				   ,#{booklogId}
			)
	</insert>

	<update id="update" parameterType="Bookloglogs">
		update 
				booklog_logs 
		   set 
		   		  content 	= #{content}
				, img 		= #{img} 
		 where 
		 		id = #{logsId}; 
	</update>

	<delete id="delete" parameterType="Long">
		delete
		from
			booklog_logs
		where
			id = #{id}
	</delete>

</mapper>