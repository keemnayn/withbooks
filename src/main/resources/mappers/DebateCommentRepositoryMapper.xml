<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.withbooks.web.repository.DebateCommentRepository">

    <!-- 테이블 전체 컬럼 -->
    <sql id="debateComment">
        id
        , board_id
        , user_id
        , content
        , reg_date
        , blind_yn
    </sql>

    <!-- 게시글 저장 -->
    <insert id="save" parameterType="DebateComment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO debate_comment (
            <include refid="debateComment" />
        ) VALUES (
        #{id}
        , #{boardId}
        , #{userId}
        , #{content}
        , NOW()
        , 0
        )
    </insert>

    <!-- 댓글 상세정보 조회 -->
    <select id="findById" resultType="DebateComment">
        SELECT
            <include refid="debateComment" />
        FROM debate_comment
        where id = #{id}
    </select>

    <!-- 댓글 리스트 조회 -->
    <select id="findAllById" parameterType="Long" resultType="DebateComment">
        SELECT
        <include refid="debateComment" />
        FROM
        debate_comment
        WHERE
        blind_yn = 0
        AND board_id = #{boardId}
        ORDER BY
        id DESC
    </select>

    <!-- 댓글 삭제 -->
    <delete id="deleteById" parameterType="Long">
        UPDATE debate_comment
        SET
        blind_yn = 1
        WHERE
        id = #{id}
    </delete>




</mapper>

